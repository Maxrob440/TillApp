        <Button Content="Add Coke" Click="coke" Canvas.Left="167" Canvas.Top="189" Height="36" Width="83"/>
        <StackPanel Margin="695,402,0,0"/>
        <ComboBox x:Name="ItemComboBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="78" Height="48" Canvas.Left="288" Canvas.Top="28"/>
        <TextBlock x:Name="SelectedItemTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="63,303,0,0" Width="160" Height="40"/>


    </Canvas>
</Page>
