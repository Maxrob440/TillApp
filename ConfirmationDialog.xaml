<Window x:Class="TillApp.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="200" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Text="Has this order been paid?" />
        <Button Name="YesButton" Content="Yes" Width="75" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" Click="YesButton_Click"/>
        <Button Name="NoButton" Content="No" Width="75" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="NoButton_Click"/>
        <Button Name="TabButton" Content="Tab" Width="75" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Click="TabButton_Click"/>
    </Grid>
</Window>